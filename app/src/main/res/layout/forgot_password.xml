<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--BG gradiente-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiente"
        android:alpha="0.99"/>

    <!--BG imagen-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/estacionamiento"
        android:alpha="0.5"/>

    <!--CONTAINER LOGO-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp"
        android:gravity="center_horizontal">

        <!--LOGO-->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"/>
    </LinearLayout>

    <!--CONTAINER FORMULARIO-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="15dp"
        >

        <!--CONTAINER INPUTS, BTN-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#19191A"
            android:orientation="vertical"
            android:padding="28dp">

            <!--TITULOS-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:text="Ingresa tu correo"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.9"
                android:text="Recupera tu contraseña"
                android:textColor="@color/white" />

            <!--PADDING - ESPACIOS -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <!--INPUT EMAIL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="Email"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:drawableEnd="@drawable/email_icon"
                android:hint="Introducir Email"
                android:inputType="textEmailAddress"
                android:background="#F8F4FC"
                />

            <!--PADDING - ESPACIOS -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <!--INPUT CONTRASEÑA -->


            <!--PADDING - ESPACIOS -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />


            <!--BTN - INICIAR SESION -->

            <!--PADDING - ESPACIOS -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="355dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/violeta"
                android:text="Recuperar"
                android:textStyle="bold"
                app:cornerRadius="10dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <!-- REGISTRO - BTN -->


            <View
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>